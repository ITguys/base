<div class="row">
  <%= form_tag password_resets_path, method: :post, class: 'form-horizontal', role: 'form' do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8 text-center">
        <h2 class="form-group-heading"><strong>忘记密码</strong></h2>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8">
        <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
        <%= submit_tag '发送重置请求', class: 'btn btn-primary btn-block'%>
      </div>
    </div>
  <% end -%>
</div>

