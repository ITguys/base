<div class="row">
  <%= form_for :user, url: password_reset_path, method: :patch, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= @user.email %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.password_field :password, class: 'form-control', placeholder: '密码', required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '重复密码', required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= submit_tag 'Reset now', class: 'btn btn-primary btn-block'%>
      </div>
    </div>
  <% end %>
</div>