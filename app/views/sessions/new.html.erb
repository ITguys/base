<div class="row">
  <%= form_tag sessions_path, class: 'form-horizontal', role: 'form' do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6 text-center">
        <h2 class="form-group-heading"><strong>请 先 登 录</strong></h2>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <label class='checkbox'>
          <%= check_box_tag :remember, 'remember'%> Remember me
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= submit_tag '登 录', class: 'btn btn-primary btn-block'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6 text-right">
        <a href="/forgot_password">忘记密码</a>
      </div>
    </div>
  <% end -%>
</div>

