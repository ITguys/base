<%= form_tag sessions_path, class: 'form-signin' do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
  <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true %>
  <label class='checkbox'>
    <%= check_box_tag :remember, 'remember'%> Remember me
  </label>
  <%= submit_tag :sign_in, class: 'btn btn-lg btn-primary btn-block'%>
<% end -%>